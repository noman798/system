cmd=$(which tmux)      # tmux path
session=$USER # session name

if [ -z $cmd ]; then
    echo "You need to install tmux."
    exit 1
fi

$cmd has -t $session 2> /dev/null

if [ $? != 0 ]; then
    $cmd new -d -n tz -s $session "cd ~/tz/code;bash"

    $cmd splitw -h -p 20 -t $session "cd ~/tz/code;../dev;bash"
    $cmd splitw -v -p 66 -t $session "cd ~/tz/code/d/autocomplete;./build;bash"
    $cmd splitw -v -p 50 -t $session "cd ~/tz/code/py;./dev;bash"
    $cmd select-pane -L
    $cmd selectw -t $session:1
fi



$cmd att -t $session

exit 0
